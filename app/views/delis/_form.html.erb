<%= form_with model: @deli, local: true do |f|%>
  <div class="field">
    <%= f.label :name, "お惣菜名" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :text, "説明" %><br />
    <%= f.text_area :text, class: :form__text %>
  </div>

  <div class="field">
    <%# <%= f.collection_select (:supermarket_id, Supermarket.all, :id, :name, {class:"select-box", id:"deli-supermarket"}) %>
  </div>

  <div class="field">
    <%= f.label :image, "画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>