<%= form_with model: @deli, local: true do |f|%>
  <div class="field">
    <%= f.label :name, "お惣菜名" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :text, "説明" %><br />
    <%= f.text_area :text, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :category_id, "カテゴリ" %>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt:'投稿するカテゴリを選んでください'},{class:"select-box", id:"deli-category"}) %>
  </div>

  <div class="field">
    <%= f.label :supermarket_id, "購入した店舗" %>
    <%= f.collection_select(:supermarket_id, Supermarket.all, :id, :name, {prompt:'--------'},{class:"select-box", id:"deli-supermarket"}) %>
  </div>

  <div class="field">
    <%= f.label :image, "画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>